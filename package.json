{
    "name": "valon-args",
    "version": "2.0.3",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "private": false,
    "keywords": [
        "typescript",
        "cli",
        "console",
        "valon",
        "argument",
        "args",
        "option",
        "parser",
        "parsing",
        "cli",
        "command"
    ],
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/stefanoruth/valon-args.git"
    },
    "scripts": {
        "clean": "rm -rf dist/",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "NODE_ENV=testing mocha --require ts-node/register --recursive \"./src/**/*.test.ts\" --watch-files \"./src/**/*.ts\"",
        "prepare-release": "yarn clean && yarn build && yarn test --coverage",
        "example": "ts-node src/example.ts",
        "example:watch": "nodemon"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "@types/sinon": "^10.0.13",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.8.2",
        "sinon": "^15.0.1",
        "string-argv": "^0.3.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.4"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "nodemonConfig": {
        "exec": "ts-node src/example.ts",
        "ext": "ts",
        "watch": "src/**"
    }
}
