{
    "name": "valon-args",
    "version": "2.0.3",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "private": false,
    "keywords": [
        "typescript",
        "cli",
        "console",
        "valon",
        "argument",
        "args",
        "option",
        "parser",
        "parsing",
        "cli",
        "command"
    ],
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/stefanoruth/valon-args.git"
    },
    "scripts": {
        "clean": "rm -rf dist/",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "mocha --require ts-node/register --recursive \"./src/**/*.test.ts\" --watch-files \"./src/**/*.ts\"",
        "prepare-release": "yarn clean && yarn build && yarn test --coverage",
        "example": "ts-node src/example.ts",
        "example:watch": "nodemon"
    },
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.38",
        "chai": "^4.3.6",
        "mocha": "^10.0.0",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "string-argv": "^0.3.1",
        "ts-node": "^10.8.0",
        "typescript": "^4.7.2"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "nodemonConfig": {
        "exec": "ts-node src/example.ts",
        "ext": "ts",
        "watch": "src/**"
    }
}
