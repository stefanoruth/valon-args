{
    "name": "valon-args",
    "version": "1.1.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "private": false,
    "keywords": [
        "typescript",
        "cli",
        "console",
        "valon",
        "argument",
        "args",
        "option",
        "parser",
        "parsing",
        "cli",
        "command"
    ],
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/stefanoruth/valon-args.git"
    },
    "scripts": {
        "clean": "rm -rf dist/",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepare-release": "yarn clean && yarn build && yarn test --coverage"
    },
    "devDependencies": {
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.12",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.4.4",
        "typescript": "^4.1.3"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
