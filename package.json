{
    "name": "valon-args",
    "version": "1.1.1",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "private": false,
    "keywords": [
        "typescript",
        "cli",
        "console",
        "valon",
        "argument",
        "args",
        "option",
        "parser",
        "parsing",
        "cli",
        "command"
    ],
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/stefanoruth/valon-args.git"
    },
    "scripts": {
        "clean": "rm -rf dist/",
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepare-release": "yarn clean && yarn build && yarn test --coverage",
        "example": "ts-node example/index.ts",
        "example:watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec 'ts-node' example/index.ts"
    },
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.31",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "string-argv": "^0.3.1",
        "ts-jest": "^26.5.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.2"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    }
}
